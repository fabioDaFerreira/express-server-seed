{
  "name": "open-source-seed",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-coverage":"istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "test": "mocha ./src/**/*.test.js --compiles js:babel-register --watch",
    "test:single": "istanbul cover -x src/**/*.test.js node_modules/mocha/bin/_mocha  --  -R spec src/**/*.js"
  },
  "author": "martinhoferreira10@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "ghooks": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit":"npm run test:single && npm run check-coverage"
    }
  }
}